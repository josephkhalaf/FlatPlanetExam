@model Project.Web.Models.CountViewModel

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.Id)
        @Html.HiddenFor(model => model.CountNumber)
        <div class="form-group">
            @Html.LabelFor(model => model.CountNumber, htmlAttributes: new { @class = "control-label col-md-2" })
            
            <div class="col-md-10">
                @Html.DisplayTextFor(model => model.CountNumber)
                @Html.ValidationMessageFor(model => model.CountNumber, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Increase Value" class="btn btn-default" />
            </div>
        </div>
    </div>
}
